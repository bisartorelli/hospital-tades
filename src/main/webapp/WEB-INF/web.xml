<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <description>Hospital Tades</description>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/hospital_tades</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>senacpi.hospitaltades.foreachtest.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>studentServlet</servlet-name>
        <servlet-class>senacpi.hospitaltades.foreachtest.studentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MvcDemoServlet</servlet-name>
        <servlet-class>senacpi.hospitaltades.foreachtest.MvcDemoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EstudanteServlet</servlet-name>
        <servlet-class>senacpi.hospitaltades.foreachtest.EstudanteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>senacpi.hospitaltades.jdbc.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PacienteControllerServlet</servlet-name>
        <servlet-class>senacpi.hospitaltades.dao.PacienteControllerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/HelloWorldServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>studentServlet</servlet-name>
        <url-pattern>/studentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MvcDemoServlet</servlet-name>
        <url-pattern>/MvcDemoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EstudanteServlet</servlet-name>
        <url-pattern>/EstudanteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PacienteControllerServlet</servlet-name>
        <url-pattern>/PacienteControllerServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
